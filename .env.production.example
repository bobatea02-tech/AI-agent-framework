# Production Environment Configuration
# COPY THIS TO .env IN PRODUCTION

# --- General ---
ENV=production
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME=ai-agent-framework

# --- Security ---
# Generate a strong random key: openssl rand -hex 32
API_KEY_SECRET=change-this-to-a-secure-random-key-in-prod
SECRET_KEY=change-this-to-another-secure-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# --- Database ---
# Use a production-grade managed database URL usually
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=prod_secure_password
POSTGRES_DB=ai_agent_prod
DATABASE_URL=postgresql://prod_user:prod_secure_password@postgres:5432/ai_agent_prod

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=prod_redis_password

# --- Kafka ---
KAFKA_BROKER_URL=kafka:9092
KAFKA_CLIENT_ID=ai-agent-prod

# --- Intel OpenVINO ---
USE_OPENVINO=true
OPENVINO_THREADS=8

# --- Airflow ---
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=secure_admin_password
